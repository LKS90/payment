  );

  // Administration section.
  $items['admin/config/services/payment'] = array(
    'route_name' => 'payment.admin',
    'title' => 'Payment',
  );
  $items['admin/content/payments'] = array(
    'route_name' => 'payment.payment.admin_list',
    'title' => 'Payments',
    'type' => MENU_LOCAL_TASK,
