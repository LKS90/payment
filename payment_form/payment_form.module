<?php

/**
 * @file
 *   Hook implementations and general functions.
 */

/**
 * Implements hook_entity_info_alter().
 */
function payment_form_entity_info_alter(&$entity_info) {
  /** @var \Drupal\Core\Entity\EntityTypeInterface $info */
  $info = $entity_info['payment'];
  $info->setFormClass('payment_form', 'Drupal\payment_form\Entity\PaymentFormController');
}
